{
  "productName": "notes",
  "mainBinaryName": "notes",
  "version": "0.0.3",
  "identifier": "com.github.ste163.notes",
  "build": {
    "beforeDevCommand": "pnpm start:dev:ui:desktop",
    "beforeBuildCommand": "pnpm build:ui:desktop",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "createUpdaterArtifacts": true,
    "macOS": {
      "signingIdentity": "-"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQzRjdCMDY0MjFBRTA3MjQKUldRa0I2NGhaTEQzMHhpa2pub2JtcFNoR3JyZWV0K2F1M3JMcnc4ZlhCN3FaQUY0a0grQUVxaFMK",
      "endpoints": [
        "https://github.com/ste163/notes/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      },
      "macOS": {
        "installMode": "passive"
      },
      "linux": {
        "installMode": "passive"
      }
    }
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": false,
    "windows": [
      {
        "devtools": true,
        "fullscreen": false,
        "resizable": true,
        "title": "notes",
        "minWidth": 400,
        "width": 800,
        "minHeight": 300,
        "height": 600,
        "useHttpsScheme": false
      }
    ],
    "security": {
      "capabilities": [
        "http",
        "desktop-updater"
      ],
      "csp": {
        "default-src": "self",          
        "connect-src": "http: ipc:",
        "style-src": "'self' 'unsafe-inline'"
      }
    }
  }
}